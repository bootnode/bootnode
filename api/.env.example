# Application
APP_NAME=Bootnode
APP_ENV=development
DEBUG=true
API_PREFIX=/v1

# Database
DATABASE_URL=postgresql+asyncpg://bootnode:bootnode@localhost:5432/bootnode
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0

# Authentication (CHANGE IN PRODUCTION!)
JWT_SECRET=change-me-in-production-use-a-long-random-string
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440
API_KEY_SALT=change-me-in-production-use-a-long-random-string

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_COMPUTE_UNITS=1000

# Chain RPCs - Add your RPC endpoints here
# You can use public RPCs, your own nodes, or services like Alchemy/Infura

# Ethereum
ETH_MAINNET_RPC=
ETH_SEPOLIA_RPC=
ETH_HOLESKY_RPC=

# Polygon
POLYGON_MAINNET_RPC=
POLYGON_AMOY_RPC=

# Arbitrum
ARBITRUM_MAINNET_RPC=
ARBITRUM_SEPOLIA_RPC=

# Optimism
OPTIMISM_MAINNET_RPC=
OPTIMISM_SEPOLIA_RPC=

# Base
BASE_MAINNET_RPC=
BASE_SEPOLIA_RPC=

# Avalanche
AVALANCHE_MAINNET_RPC=
AVALANCHE_FUJI_RPC=

# BNB Chain
BSC_MAINNET_RPC=
BSC_TESTNET_RPC=

# Lux
LUX_MAINNET_RPC=
LUX_TESTNET_RPC=

# Solana
SOLANA_MAINNET_RPC=
SOLANA_DEVNET_RPC=

# External Services
IPFS_GATEWAY=https://ipfs.io/ipfs/

# Webhooks
WEBHOOK_TIMEOUT=30
WEBHOOK_MAX_RETRIES=5

# ERC-4337 Bundler (optional - for running your own bundler)
BUNDLER_PRIVATE_KEY=
BUNDLER_BENEFICIARY=
