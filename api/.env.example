# Bootnode API - Development Configuration
# For local development use

# Application
APP_NAME=Bootnode
APP_ENV=development
DEBUG=true
API_PREFIX=/v1

# Database
DATABASE_URL=postgresql+asyncpg://bootnode:bootnode@localhost:5432/bootnode
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0

# Authentication
JWT_SECRET=dev-jwt-secret-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440
API_KEY_SALT=dev-api-key-salt-change-in-production

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_COMPUTE_UNITS=10000

# Free Public RPC URLs for Development
ETH_MAINNET_RPC=https://eth.llamarpc.com
ETH_SEPOLIA_RPC=https://sepolia.infura.io/v3/9aa3d95b3bc440fa88ea12eaa4456161
POLYGON_MAINNET_RPC=https://polygon.llamarpc.com
POLYGON_AMOY_RPC=https://rpc-amoy.polygon.technology
ARBITRUM_MAINNET_RPC=https://arbitrum.llamarpc.com
ARBITRUM_SEPOLIA_RPC=https://sepolia-rollup.arbitrum.io/rpc
OPTIMISM_MAINNET_RPC=https://optimism.llamarpc.com
OPTIMISM_SEPOLIA_RPC=https://sepolia.optimism.io
BASE_MAINNET_RPC=https://mainnet.base.org
BASE_SEPOLIA_RPC=https://sepolia.base.org
AVALANCHE_MAINNET_RPC=https://api.avax.network/ext/bc/C/rpc
AVALANCHE_FUJI_RPC=https://api.avax-test.network/ext/bc/C/rpc
BSC_MAINNET_RPC=https://bsc-dataseed.binance.org
BSC_TESTNET_RPC=https://data-seed-prebsc-1-s1.binance.org:8545
SOLANA_MAINNET_RPC=https://api.mainnet-beta.solana.com
SOLANA_DEVNET_RPC=https://api.devnet.solana.com

# External Services
IPFS_GATEWAY=https://ipfs.io/ipfs/

# Webhooks
WEBHOOK_TIMEOUT=30
WEBHOOK_MAX_RETRIES=5

# Pricing/Market Data
MARKETS_API_URL=https://markets.lux.network
COINGECKO_API_KEY=your-coingecko-api-key

# Hanzo KMS (Secret Management)
HANZO_KMS_URL=https://kms.hanzo.ai
HANZO_KMS_ORG=hanzo
HANZO_KMS_PROJECT=bootnode
HANZO_KMS_ENV=development
HANZO_KMS_CLIENT_ID=
HANZO_KMS_CLIENT_SECRET=

# Hanzo IAM (Authentication)
HANZO_IAM_URL=https://hanzo.id
HANZO_IAM_ORG=HANZO
HANZO_IAM_CLIENT_ID=
HANZO_IAM_CLIENT_SECRET=

# Hanzo HSM (Hardware Security - optional)
HANZO_HSM_ENABLED=false

# ZAP Server (native Cap'n Proto RPC)
ZAP_ENABLED=true
ZAP_HOST=0.0.0.0
ZAP_PORT=9999
